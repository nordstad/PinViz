    {"name": "AD0", "role": "GPIO", "optional": true},
    {"name": "INT", "role": "GPIO", "optional": true}
  ],

  "i2c_address": "0x68",
  "datasheet_url": "https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf",
